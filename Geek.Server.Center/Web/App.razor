
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Web.App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView Resource="@routeData" RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <Geek.Server.Center.Web.Pages.Login.LoginRedirect />
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudText Typo="Typo.h3" GutterBottom="true">抱歉,不能发现相关页面！</MudText>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>